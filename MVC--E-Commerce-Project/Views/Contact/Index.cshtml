@model ContactVM
<!--====== Contact PART START ======-->

<div class="contact-map-area pt-50">
    <div id="contact-map"></div>
</div>

<!--====== Contact PART ENDS ======-->
<!--====== Breadcrumb Part Start ======-->

<div class="breadcrumb-area">
    <div class="container-fluid custom-container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Contact</li>
            </ol>
        </nav>
    </div> <!-- container -->
</div>

<!--====== Breadcrumb Part Ends ======-->
<!--====== Contact Part Start ======-->

<section class="contact-page pt-20">
    <div class="container-fluid custom-container">
        <div class="row">
            <div class="col-lg-7 col-xl-8">
                <div class="contact-form mt-30">
                    <h4 class="allup-title">Billing Address</h4>
                    <form id="contact-form" asp-controller="Contact" asp-action="SendMessage" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="single-form">

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <input type="text" asp-for="@Model.User.FullName" name="FullName" placeholder="Your Name" disabled>
                                    }
                                    else
                                    {
                                        <input type="text" name="name" placeholder="Your Name">
                                    }

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="single-form">

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <input type="email" asp-for="@Model.User.Email" name="Email" placeholder="Your Email" disabled>
                                    }
                                    else
                                    {
                                        <input type="email" name="email" placeholder="Your Email">
                                    }

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="single-form">
                                    <input asp-for="@Model.Message.Subject" type="text" name="Subject" placeholder="Subject">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="single-form">
                                    <textarea name="Text" asp-for="@Model.Message.Text" placeholder="Your Message"></textarea>
                                </div>
                            </div>
                            <p class="form-message"></p>
                            <div class="col-md-12">
                                <div class="single-form">
                                    <button class="main-btn main-btn-2">Send Message</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 col-xl-4">
                <div class="contact-info mt-30">
                    <h4 class="title">Contact Us</h4>
                    <p class="text">@Model.Contact.Description</p>

                    <ul class="contact-info-block">
                        <li>
                            <div class="single-info">
                                <div class="info-icon-title d-flex align-item-center">
                                    <div class="info-icon">
                                        <i class="icon ion-map"></i>
                                    </div>
                                    <h5 class="info-title media-body">Address</h5>
                                </div>
                                <p>@Model.Contact.Address</p>
                            </div>
                        </li>
                        <li>
                            <div class="single-info">
                                <div class="info-icon-title d-flex align-item-center">
                                    <div class="info-icon">
                                        <i class="icon ion-ios-telephone-outline"></i>
                                    </div>
                                    <h5 class="info-title media-body">Phone</h5>
                                </div>
                                <p>@Model.Contact.Phone</p>
                            </div>
                        </li>
                        <li>
                            <div class="single-info">
                                <div class="info-icon-title d-flex align-item-center">
                                    <div class="info-icon">
                                        <i class="icon ion-ios-email-outline"></i>
                                    </div>
                                    <h5 class="info-title media-body">Email</h5>
                                </div>
                                <p>@Model.Contact.Email</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--====== Contact Part Ends ======-->
<!--====== Features Banner Part Start ======-->

@await Component.InvokeAsync("CompanySliderService")


<!--====== Brand Part Ends ======-->
<!--====== Newsletter Part Start ======-->

@await Component.InvokeAsync("Subscribe")

<!--====== Newsletter Part Ends ======-->

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $(document).ready(function () {
            $("#contact-form").submit(function (e) {
                e.preventDefault();
                let formData = {
                    Subject: $("#Message_Subject").val(),
                    Text: $("#Message_Text").val(),
                };

                $.ajax({
                    url: "/contact/sendmessage",
                    type: "post",
                    data: formData,
                    success: function (response) {
                        Swal.fire({
                            position: 'top',
                            icon: 'success',
                            title: 'Your message has sended',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(function (result) {
                            // document.getElementsByClassName("cbr-alert")[0].style.display = "none"
                            $("#Message_Subject").val("");
                            $("#Message_Text").val("");
                        })
                    },
                    error: function (error) { }
                })
            })
        })
    </script>
}
