@model MVC__E_Commerce_Project.Models.CompanySlider

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CompanySlider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
