@model IList<IdentityRole>


<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hoverable Table</h4>
            <p class="card-description">
                <a class="btn btn-primary" asp-controller="Role" asp-action="Create" class="btn btn-outline-primary"> Create Role</a>
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Settings</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <p>@item.Name</p>
                            </td>

                            <td>
                                <a asp-controller="Role" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                            </td>
                            <td>
                                <a asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

