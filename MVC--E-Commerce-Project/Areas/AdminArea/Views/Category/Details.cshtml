@model Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsMain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsMain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsFeatured)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFeatured)
        </dd>
        @if (Model.IsMain)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Photo)
            </dt>
            <dd class="col-sm-10">
                <img src="~/assets/images/@Html.DisplayFor(model => model.ImageUrl)" style="width:200px;height:200px" alt="Alternate Text" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-warning">Back to List</a>
</div>